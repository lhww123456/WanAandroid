<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#E8FAFA"
    android:layout_height="55dp">

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/home_tab_selsctor" />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/interlocution"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_interlocution"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/interlocution_tab_selsctor"/>
        <TextView
            android:id="@+id/text_interlocution"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/interlocution"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/system"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_system"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/system_tab_selsctor"/>
        <TextView
            android:id="@+id/text_system"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/system"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_nav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/nav_tab_selsctor" />

        <TextView
            android:id="@+id/text_nav"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="导航" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_mine"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/mine_tab_selsctor"/>
        <TextView
            android:id="@+id/text_mine"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/mine"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>