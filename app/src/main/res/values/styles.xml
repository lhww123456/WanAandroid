<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="AppTheme.Start">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.Logon" />
    <style name="AppTheme.Search">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolBarStyle" parent="@style/BaseToolBarStyle" />
    <!--定义SearchView样式-->
    <style name="SearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    //定义ProgressBar大小
    <style name="LoadingProgressStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">#ddd</item>
    </style>

    <!-- 自定义Loading Dialog -->
    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#0097A7</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
